# Environment variables (create a .env.local file with these values)
# SECURITY WARNING: Never commit .env.local to version control!

# Your Supabase project URL (safe to expose to client)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url

# Your Supabase anon/public key (safe to expose to client)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Your Supabase service role key (NEVER expose to client - server-side only)
# This key has full database access and bypasses RLS policies
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# OpenAI API key for meal parsing and suggestions
OPENAI_API_KEY=your_openai_api_key

# Nutritionix API credentials for calorie and macro data
NUTRITIONIX_APP_ID=your_nutritionix_app_id
NUTRITIONIX_API_KEY=your_nutritionix_api_key
